<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <div id="errorExplanation">
        <h2><%= pluralize(@post.errors.count, "error") %> No se pudo guardar el post!</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <p>
        <%= f.label "Titulo" %><br>
        <%= f.text_field :title, :class => 'form-control', :placeholder => 'Escriba el Titulo' %>
    </p>
    <p>
        <%= f.label "Texto" %><br>
        <%= f.text_area :text , :class => 'form-control', :placeholder => 'Escriba el texto de su post'  %>
    </p>
    <p>
    <%= f.submit "Editar" , :class => 'btn btn-default'%>
    </p>
<% end %>

<%= link_to 'Back', posts_path %>